# Pigeon Systemd Environment Configuration
# Copy this file to /etc/pigeon/pigeon.env and customize for your deployment

# Google Drive Configuration
PIGEON_DRIVE_FOLDER=/Voice Recordings
PIGEON_POLL_INTERVAL=60

# Google Authentication Profile
# Should correspond to a profile in ~/.config/google-personal-mcp/
PIGEON_GOOGLE_PROFILE=default

# Slack Configuration (if enabled)
# Set to empty string to disable Slack integration
PIGEON_SLACK_BOT_TOKEN=

# Processing Configuration
PIGEON_ENABLE_STT=true
PIGEON_ENABLE_PROFESSIONALIZE=true
PIGEON_MELLONA_PROFILE=worker

# Logging Configuration
PIGEON_LOG_LEVEL=INFO
PIGEON_LOG_FILE=/var/log/pigeon/pigeon.log
PIGEON_LOG_MAX_SIZE_MB=100

# Debug Mode (should be false in production)
PIGEON_DEBUG=false
PIGEON_DRY_RUN=false

# Custom Python Path (if needed)
# PYTHONPATH=/opt/pigeon/src
